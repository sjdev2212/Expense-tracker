<%= form_with model: @expense, url: expenses_path  do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
    </p>
 
  <p>
    <%= f.submit %>
  </p>
  <%= link_to "Go back" , root_path%>
<% end %>