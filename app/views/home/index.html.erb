<div class="flashes">
  <% flash.each do |name,value|%>
    <%if value == "Signed out successfully."%>
      <div class="out-flash">
        <p  class="signing-out">
          <%= value %>
        </p>
      </div>
    <%else%>
      <p class="signing-in" >
        <%= value %>
      </p>
    <%end%>
  <% end %>
</div>
<div>
  <% if user_signed_in?%>
    <div class="user-welcome">
      <p>
        Hello <%= current_user.name %>! 
      </p>
    </div>
  <%else%>
    <div class="welcome-users">
    <p> Please
      <%=link_to " Log in ", new_user_session_path ,class:'links' %>
      or
        <%=link_to " Sign up ", new_user_registration_path, class:'links' %>
        to start tracking your expenses
      </p>
    <%end%>
  </div>
  <main class="home-container">
    <div class="title-welcome">
      <h1 class="welcome">
        Welcome to Expense Tracker
      </h1>
    </div>
    <% if user_signed_in?%>
      <%= render "expenses/expenses" %>
    <%end%>
  </main>
