<main class="main-reg">
<section class="signup-container">
<div class="title-cont">
<h2>
Sign up

</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">

    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"inputs", placeholder: "Name" %>
  </div>

  <div class="field">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"inputs", placeholder: "Email" %>
  </div>

  <div class="field">
    
  
    <%= f.password_field :password, autocomplete: "new-password" ,class:"inputs", placeholder: "Password min 6 characters" %>
  </div>

  <div class="field">
   
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"inputs", placeholder: "Confirm password" %>
  </div>

 <div>
    <%= f.submit "Sign up", class:"button-signup" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</section>
</main>
